{
  "name": "focus-core",
  "version": "0.12.1",
  "description": "Focus library core part.",
  "main": "lib/index.js",
  "repository": {
      "type": "git",
      "url": "https://github.com/KleeGroup/focus-core.git"
  },
  "keywords": [
      "spa",
      "react",
      "es6"
  ],
  "author": "focus@kleegroup.com",
  "documentation": "http://kleegroup.github.io/focus-docs/",
  "license": "MIT",
  "homepage": "https://github.com/KleeGroup/focus-core",
  "scripts": {
    "prepublish": "npm run build",
    "babelify": "better-npm-run babelify",
    "bundle": "better-npm-run bundle",
    "test": "mocha src/**/__tests__/**/*.js",
    "test:watch": "mocha src/**/__tests__/**/*.js -w",
    "build": "better-npm-run babelify && better-npm-run bundle"
  },
  "betterScripts": {
    "babelify": {
      "command": "babel src --out-dir lib --source-maps inline"
    },
    "bundle": {
      "command": "webpack --progress",
      "env": {
        "DEV": false,
        "NODE_ENV": "production",
        "LIBRARY_NAME": "FocusCore",
        "MINIMIFY": false
      }
    }
  },
  "dependencies": {
    "flux": "^2.0.3",
    "immutable": "^3.7.3",
    "keymirror": "^0.1.1",
    "lodash": "^3.9.1",
    "object-assign": "^2.0.0",
    "uuid": "^2.0.1"
  },
  "devDependencies": {
    "babel": "^5.8.21",
    "babel-core": "^5.8.24",
    "babel-eslint": "4.0.5",
    "babel-loader": "^5.3.2",
    "babel-plugin-runtime": "^1.0.7",
    "babel-runtime": "^5.8.20",
    "backbone": "^1.2.0",
    "better-npm-run": "0.0.5",
    "chai": "^3.2.0",
    "chai-subset": "^1.1.0",
    "css-loader": "^0.19.0",
    "eslint": "1.5.1",
    "eslint-config-focus": "0.3.0",
    "eslint-plugin-filenames": "0.1.1",
    "eslint-plugin-react": "3.5.0",
    "express": "^4.12.2",
