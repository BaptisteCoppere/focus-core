    "file-loader": "^0.8.4",
    "i18next-client": "^1.10.2",
    "jquery": "^2.1.4",
    "json-loader": "^0.5.3",
    "mocha": "^2.3.2",
    "moment": "^2.10.6",
    "node-sass": "^3.3.3",
    "numeral": "^1.5.3",
    "react": "^0.14.4",
    "react-addons-test-utils": "^0.14.4",
    "react-dom": "^0.14.4",
    "react-hot-loader": "^1.3.0",
    "sass-loader": "^3.0.0",
    "style-loader": "^0.12.4",
    "url-loader": "^0.5.6",
    "webpack": "^1.12.2",
    "webpack-dev-server": "^1.11.0",
    "webpack-focus": "^0.8.1"
  }
